<%= form_for(@message, html: {class: "form-horizonal"}) do |f| %>
  <% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
      <li>
        <%= full_message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">name:</label>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>  
  
  <div class="form-group">
    <label for="message_body" class="control-label col-md-2">what:</label>
    <div class="col-md-4">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="control-label col-md-2">age:</label>
    <div class="col-md-4">
      <%= f.text_field :age, :class => "form-control" %>
    </div>
  </div>


<%= f.submit class: "btn btn-sm btn-primary"%>
<% end %>